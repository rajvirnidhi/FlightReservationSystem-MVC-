<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlightReservationSystem_MVC_</title>
    <link rel="stylesheet" href="~/css/BootswatchTheme.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FlightReservationSystem_MVC_.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" />

    <style>
        .flight-image {
          background-image: url("https://c1.wallpaperflare.com/preview/929/926/321/plane-sunset-sunrise-wing.jpg");
          background-color: #cccccc;
          height: 1000px ;
          background-position: center;
          background-repeat: no-repeat;
          background-size: cover;
          position: relative;
          /*background-blend-mode: darken;*/
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Flight Reservation</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarColor01">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <a class="nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </li>
        @*<li class="nav-item">
          <a class="nav-link" asp-area="" asp-controller="Flight" asp-action="AddFlight">Add Flight</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" asp-area="" asp-controller="Flight" asp-action="UpdateFlight">View Flight</a>
        </li>
        <li>
            <a class="nav-link" asp-area="" asp-controller="Routes" asp-action="Index">Route Details</a>
        </li>*@
        </ul>
        <li class="nav-item" style="list-style: none; margin-left: 20px;">
          <a class="btn btn-outline-light" style="width:100px" asp-area="" asp-controller="User" asp-action="Login">Login</a>
        </li>
        <li class="nav-item" style="list-style: none; margin-left: 20px;">
          <a class="btn btn-outline-dark" style="width:100px" asp-area="" asp-controller="User" asp-action="Signup">Signup</a>
        </li>
    </div>
  </div>
</nav>
    </header>
    <div class="flight-image">
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
  </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - FlightReservationSystem_MVC_ - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>

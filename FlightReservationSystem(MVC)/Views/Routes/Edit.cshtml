@model FlightReservationSystem_MVC_.Models.Route
@{
    Layout = "_AdminLayout";
}
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
	
    <div class="col-md-4">
        <form asp-action="Edit" style=" width: 50vw; margin-left : 25vw;">
            <div class="border p-3 " style="width: 650px;  background: rgba(0, 0, 0, 0.3);">
                <div class="row pb-2">
			    <h1 class="text-light" style="text-align:center"><strong>Edit Route Details</strong></h1>
			    <hr/>
		        </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RouteID" />
            <div class="form-group">
                <label asp-for="FromRoute" class="control-label"></label>
                <input asp-for="FromRoute" class="form-control" />
                <span asp-validation-for="FromRoute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToRoute" class="control-label"></label>
                <input asp-for="ToRoute" class="form-control" />
                <span asp-validation-for="ToRoute" class="text-danger"></span>
            </div>
            <br />
            <div class="row row-space">
			<div class="col-3"></div>

            <div class="col-3" >
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" style="width:150px"/>
                </div>
            </div>

            <div class="col-3">
                <a asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

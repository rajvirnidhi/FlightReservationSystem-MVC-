@model Booking
@{
    Layout = "_UserLayout";
}
<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Flight Id@*@Html.DisplayNameFor(model => model.flightid)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.flightid)
        </dd>

        <dt class = "col-sm-2">
            Flight Name@*@Html.DisplayNameFor(model => model.name)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.name)
        </dd>

        <dt class = "col-sm-2">
            Source@*@Html.DisplayNameFor(model => model.source)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.source)
        </dd>
        <dt class = "col-sm-2">
            Destination@*@Html.DisplayNameFor(model => model.destination)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.destination)
        </dd>
        <dt class = "col-sm-2">
            Traveller's First Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FName)
        </dd>
        <dt class = "col-sm-2">
            Traveller's Last Name@*@Html.DisplayNameFor(model => model.LName)*@
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LName)
        </dd>
    </dl>
</div>

<div>
    <div>
        <a asp-controller="UserHome" asp-action="DeletePOST" asp-route-id="@Model.BookingId" class="btn btn-danger" style="width:150px">
            Cancel Flight
        </a>
    </div>
    <br />
    <div class="col-3">
	    <a asp-controller="UserHome" asp-action="Index" asp-route-email="@Model.email" class="btn btn-secondary" style="width:150px">
		    <i class="bi bi-house-fill"></i>
            Home
	    </a>
    </div>
</div>
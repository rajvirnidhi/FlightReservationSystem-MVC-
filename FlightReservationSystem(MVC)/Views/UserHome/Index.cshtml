@{
    Layout = "_UserLayout";
}
@model User
<h1>
    Welcome @ViewBag.email
</h1>
<a asp-controller="UserHome" asp-action="ViewBooking" asp-route-email="@ViewBag.email" class="btn btn-primary" style="font-size:small; height:30px">
    View Bookings
</a>
<a asp-controller="UserHome" asp-action="ViewFlight" asp-route-email="@ViewBag.email" class="btn btn-success" style="font-size:small; height:30px">
    View Flights
</a>
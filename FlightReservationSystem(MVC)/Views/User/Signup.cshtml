@model User
@{
    ViewData["Title"] = "Signup";
}
<br /><br />

<form method="post" style=" width: 50vw; margin-left : 25vw;">
	<div class="border p-3 " style="width: 650px;  background: rgba(0, 0, 0, 0.3);">
		<div class="row pb-2">
			<h1 class="text-light" style="text-align:center"><strong>Sign up</strong></h1>
			<hr/>
		</div>
		<div class="row row-space">
			<div class="col-6">
				<label asp-for="FName" style="color:white">First Name</label>
				<input asp-for="FName" class="form-control" />
				<span asp-validation-for="FName" class="text-danger"></span>
			</div>
			<div class="col-6">
				<label asp-for="LName"style="color:white">Last Name</label>
				<input asp-for="LName" class="form-control" />
				<span asp-validation-for="LName" class="text-danger"></span>
			</div>
		</div>
		<div class="row row-space">
			<div class="col-6">
				<label asp-for="dob" style="color:white">Date of Birth</label>
				@*<input asp-for="dob" class="form-control" />*@
				<input type="date" class="form-control" asp-for="dob"/>
				<span asp-validation-for="dob" class="text-danger"></span>
			</div>
			<div class="col-6">
				<label asp-for="pno" style="color:white">Phone Number</label>
				<input asp-for="pno" class="form-control" />
				<span asp-validation-for="pno" class="text-danger"></span>
			</div>
			
		</div>
		<div class="row row-space">
			<div class="col-6">
				<label asp-for="address" style="color:white">Address</label>
				@*<input asp-for="address" class="form-control" />*@
				<textarea class="form-control" id="exampleTextarea" rows="3" asp-for="address"></textarea>
				<span asp-validation-for="address" class="text-danger"></span>
			</div>
			<div class="col-6", class="form-group">
				@*<label asp-for="gender"></label>*@
				@*<input asp-for="gender" class="form-control" />*@
				@*<div class="form-group">*@
					<label class="form-label mt-4" asp-for="gender" style="color:white">Select Gender</label>
					<select class="form-select" asp-for="gender">
						<option>Male</option>
						<option>Female</option>
						<option>Other</option>
					</select>
				@*</div>*@
				<span asp-validation-for="gender" class="text-danger"></span>
			</div>
		</div>

		<div class="row row-space">
			<div class="col-6">
				<label asp-for="email" style="color:white">Email</label>
				<input asp-for="email" class="form-control" />
				<span asp-validation-for="email" class="text-danger"></span>
			</div>
			<div class="col-6">
				<label asp-for="password" style="color:white">Enter Password</label>
				<input type="password" class="form-control" asp-for="password"/>
				<span asp-validation-for="password" class="text-danger" ></span>
			</div>
		</div>
		<br>
		<div class="row row-space">
			<div class="col-3"></div>
			<div class="col-3" >
				<button type="submit" class="btn btn-primary" style="width:150px">Signup</button>
			</div>
			<div class="col-3">
				<a asp-controller="Home" asp-action="Index" class="btn btn-secondary" style="width:150px">
					Back to home
				</a>
			</div>
		</div>
	</div>
</form>
